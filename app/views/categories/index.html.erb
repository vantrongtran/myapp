<% provide :title, (t ".categories") %>
<div class="col-sm-12 no-padding-right">
  <table class="table">
    <thead>
      <tr>
        <th class="text-center"><%= t ".order" %></th>
        <th class="text-center"><%= t ".category_name" %></th>
        <th class="text-center"><%= t ".description" %></th>
        <th class="text-center"><%= t ".created" %></th>
        <th class="text-center"><%= t ".start_lesson" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "category", collection: @categories, as: :category %>
    </tbody>
  </table>
  <div class="wrap-paging fix-paging"><%= will_paginate %></div>
</div>
