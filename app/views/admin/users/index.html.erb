<% provide :title, (t ".alluser") %>
<h1><%= t ".alluser" %></h1>
<%= form_tag admin_users_path, method: :get do %>
  <div class="form-group row">
    <div class="col-xs-8">
      <div class="search">
        <h4><%= t ".search" %></h4>
      </div>
    </div>
    <div class="col-xs-4">
      <%= text_field_tag :user_search, params[:search], class: "form-control" %>
    </div>
  </div>
<% end %>
<table class="table table-hover bg-table ls-users">
  <thead class="title_table">
    <tr>
      <th class="text-c"><%= t ".avatar" %></th>
      <th class="text-c"><%= t ".name" %></th>
      <th class="text-c"><%= t ".email" %></th>
    </tr>
  </thead>
  <tbody id ="result_search">
    <% @users.each.with_index do |user| %>
      <tr id="user-<%= user.id %>">
        <input type="hidden" value = "<%= user.id%>">
        <td class="text-c">
          <%= image_tag "user_icon.png", class: "avatar" %>
        </td>
        <td class="text-c"><%= link_to user.name, user %></td>
        <td class="text-c"><%= user.email %></td>
        <td class="text-c">
          <button class = "glyphicon glyphicon-trash
            text-danger delete-user" onclick = "del(<%= user.id %>)">
            <%= t ".delete" %>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
